        <Card2 billede="https://via.assets.so/album.png?id=6&q=95&w=360&h=360&fit=fill" albumname="Divide" artistname="Ed Sheeran" />
        <Card2 billede="https://via.assets.so/album.png?id=7&q=95&w=360&h=360&fit=fill" albumname="1989" artistname="Taylor Swift" />
        <Card2 billede="https://via.assets.so/album.png?id=8&q=95&w=360&h=360&fit=fill" albumname="Hollywood’s Bleeding" artistname="Post Malone" />
